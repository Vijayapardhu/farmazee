# Farmazee Environment Variables
# Copy this file to .env and fill in your actual values

# Django Settings
DEBUG=True
SECRET_KEY=your-secret-key-here
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Database (SQLite for development)
DATABASE_URL=sqlite:///db.sqlite3

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# API Keys
OPENROUTER_API_KEY=your-openrouter-api-key
WEATHER_API_KEY=your-weather-api-key
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Payment Gateway
PAYMENT_GATEWAY=razorpay
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-key-secret

# Analytics
GOOGLE_ANALYTICS_ID=your-ga4-id
FACEBOOK_PIXEL_ID=your-facebook-pixel-id

# Social Media URLs
FACEBOOK_URL=https://facebook.com/farmazee
TWITTER_URL=https://twitter.com/farmazee
INSTAGRAM_URL=https://instagram.com/farmazee
YOUTUBE_URL=https://youtube.com/farmazee
LINKEDIN_URL=https://linkedin.com/company/farmazee

# Site Configuration
SITE_NAME=Farmazee
SITE_DESCRIPTION=Smart Farming Solutions
TIMEZONE=Asia/Kolkata
LANGUAGE=en

# Feature Toggles
ENABLE_MARKETPLACE=True
ENABLE_COMMUNITY=True
ENABLE_AI_CHATBOT=True
ENABLE_WEATHER=True
ENABLE_SOIL_HEALTH=True
ENABLE_CROP_PLANNING=True
ENABLE_SCHEMES=True

# Performance
ENABLE_CACHING=True
CACHE_TIMEOUT=300
ENABLE_COMPRESSION=True
ENABLE_MINIFICATION=True

# Security
SESSION_TIMEOUT=120
MAX_LOGIN_ATTEMPTS=5
PASSWORD_MIN_LENGTH=8
REQUIRE_STRONG_PASSWORD=True
ENABLE_2FA=False
ENABLE_CSRF=True

# Backup
AUTO_BACKUP=True
BACKUP_FREQUENCY=daily
RETAIN_BACKUPS=30
BACKUP_LOCATION=/backups
